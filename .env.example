# ===============================================
# CONFIGURACIÓN DEL BOT TELEGRAM - ASSISTANT
# ===============================================

# Token del Bot de Telegram (obtenerlo desde @BotFather)
TOKEN_TELEGRAM=tu_token_aqui

# API Key de Google Gemini (gratuita desde https://makersuite.google.com/app/apikey)
GOOGLE_API_KEY=tu_google_api_key_aqui

# ID del grupo donde se publicarán los posts automáticos
# Para obtenerlo: Agrega el bot al grupo y usa @userinfobot
ID_TU_GRUPO=-1001234567890

# ID del administrador (tu ID de Telegram)
# Para obtenerlo: usa detector_ids.py o @userinfobot
ID_ADMIN=123456789

# ===============================================
# CONFIGURACIÓN DE HORARIOS PARA PUBLICACIONES
# ===============================================

# Hora de inicio para publicaciones automáticas (formato 24h: HH:MM)
HORA_INICIO_POST=09:00

# Hora de fin para publicaciones automáticas (formato 24h: HH:MM)
HORA_FIN_POST=22:00

# Zona horaria (ver lista: https://en.wikipedia.org/wiki/List_of_tz_database_time_zones)
# Ejemplos:
# - America/Mexico_City (CDMX)
# - America/Bogota (Colombia)
# - America/New_York (NY)
TIMEZONE=America/Mexico_City

# ===============================================
# VERSIÓN PRO (100% GRATIS)
# ===============================================

# Activar características PRO sin costo adicional
# Features PRO incluyen:
# - Memoria conversacional (contexto de mensajes previos)
# - Posts automáticos más variados y creativos
# - Análisis mejorado de leads
# - Estadísticas detalladas
#
# Valores: true o false
VERSION_PRO=false

